<% if @writer.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <!--This returns "0 errors", "1 error", "2 errors"-->
      The form contains <%= pluralize(@writer.errors.count, "error") %>.
    </div>
    <ul>
    <% @writer.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>